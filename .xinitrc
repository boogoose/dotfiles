#!/bin/bash
#
#~/.xinitrc

#####################################################################
#                  APPETIZERS                                       #
#####################################################################

source ~/.xstartup

#####################################################################
#                  MAIN                                             #
#####################################################################

[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

[ -f /etc/xprofile ] && . /etc/xprofile
[ -f ~/.xprofile ] && . ~/.xprofile

[ -f ~/.Xmodmap ] && . ~/.Xmodmap

#####################################################################
#                  COFFEE                                           #
#####################################################################

exec i3
